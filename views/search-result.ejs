<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Search Results</title>
</head>
<body>
  <h1>Search Results for "<%= keyword %>"</h1>

  <p><a href="/books/search">New search</a> | <a href="/books/list">All books</a></p>

  <% if (results.length === 0) { %>
    <p>No books found.</p>
  <% } else { %>
    <table border="1" cellpadding="6">
      <tr>
        <th>Book name</th>
        <th>Price (Â£)</th>
      </tr>
      <% results.forEach(function(book) { %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.price.toFixed ? book.price.toFixed(2) : book.price %></td>
        </tr>
      <% }) %>
    </table>
  <% } %>
</body>
</html>
