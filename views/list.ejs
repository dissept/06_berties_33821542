<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= shopData.shopName %> – All Books</title>
</head>
<body>
  <h1><%= shopData.shopName %> – All Books</h1>

  <p>
    <a href="/">Home</a> |
    <a href="/books/add">Add book</a> |
    <a href="/books/list">All books</a> |
    <a href="/books/add">Add book</a> |
    <a href="/books/search">Search</a>
    <a href="/books/bargainbooks">Bargain books</a>

  </p>

  <% if (books.length === 0) { %>
    <p>No books in the catalogue.</p>
  <% } else { %>
    <table border="1" cellpadding="6">
      <thead>
        <tr>
          <th>ID</th>
          <th>Book name</th>
          <th>Price (£)</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach(function(book) { %>
          <tr>
            <td><%= book.id %></td>
            <td><%= book.name %></td>
            <td><%= book.price.toFixed ? book.price.toFixed(2) : book.price %></td>
            <td>
              <a href="/books/edit/<%= book.id %>">Edit</a> |
              <a href="/books/delete/<%= book.id %>" onclick="return confirm('Delete this book?');">
                Delete
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

</body>
</html>
