<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= shopName %> – All Books</title>
</head>
<body>
  <h1><%= shopName %> – All Books</h1>

  <p><a href="/">Home</a> | <a href="/addbook">Add book</a> | <a href="/bargainbooks">Bargain books</a> | <a href="/search">Search</a></p>

  <table border="1" cellpadding="6">
    <thead>
      <tr>
        <th>ID</th>
        <th>Book name</th>
        <th>Price (£)</th>
      </tr>
    </thead>
    <tbody>
      <% availableBooks.forEach(function(book) { %>
        <tr>
          <td><%= book.id %></td>
          <td><%= book.name %></td>
          <td><%= book.price.toFixed ? book.price.toFixed(2) : book.price %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
